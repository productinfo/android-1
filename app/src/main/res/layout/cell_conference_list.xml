<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/cellConferenceDate"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:ignore="RtlCompat"
            tools:text="20 - 22" />

        <TextView
            android:id="@+id/cellConferenceFlag"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="Flag" />

        <TextView
            android:id="@+id/cellConferenceTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="98"
            android:autoSizeMinTextSize="12sp"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:text="Conference Name"
            tools:targetApi="o" />

        <ImageButton
            android:id="@+id/cellConferenceFavoriteButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/like"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_star_deselected" />

        <TextView
            android:id="@+id/cellConferenceIsNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:rotation="-90"
            android:text="@string/newConf"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>